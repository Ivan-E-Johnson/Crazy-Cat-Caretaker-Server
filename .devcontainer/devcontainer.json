{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install pipenv ; pipenv shell ; pipenv install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "flask --debug run"
  },
  "portsAttributes": {
    "5000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "templates/index.html"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "remoteEnv": {
      "APPLICATION_SETTINGS": "config.py",
      "PUBLIC_VAR_NAME": "example"
   },
  "forwardPorts": [5000]
}
